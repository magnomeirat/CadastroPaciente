        <div class="form-row">
            <label>Outros Telefones:</label>
        </div>

        <table class="table-bordered" width="100%">
            <tr class="table-primary">
                <td class="table-primary"><h6>Tel 1</h6></td>
                <td class="table-primary"><h6>Tel 2</h6></td>
                <td class="table-primary"><h6>Cel</h6></td>
                <td class="table-primary"><h6>Fax</h6></td>
            </tr>
            @{var enderecoFull = "";}

            @foreach (EnderecoBenner endereco in Model.enderecosBenner)
            {

                <tr class="table-primary">
                    @if (endereco.tel1 != "null")
                    {
                        <td class="table-primary"><label>@endereco.tel1</label></td>

                    }
                    else
                    {
                        <td class="table-primary"></td>
                    }

                    @if (endereco.tel2 != "null")
                    {
                        <td class="table-primary"><label>@endereco.tel2</label></td>
                    }
                    else
                    {
                        <td class="table-primary"></td>
                    }



                    @if (endereco.cel != "null")
                    {
                        <td class="table-primary"><label>@endereco.cel</label></td>
                    }
                    else
                    {
                        <td class="table-primary"></td>
                    }



                    @if (endereco.fax != "null")
                    {
                        <td class="table-primary"><label>@endereco.fax</label></td>
                    }
                    else
                    {
                        <td class="table-primary"></td>
                    }

                    @{ enderecoFull = endereco.endereco;}
                </tr>

            }

            @*<tr class="table-primary">
                    <td class="table-primary" colspan="4"><label>@enderecoFull</label></td>
                </tr>*@

        </table>



