@model CadastroPaciente.Models.Paciente

@{
    ViewData["Title"] = "View";
}


<div>
    <h4>Dados Cadastrais do Paciente</h4>
    <hr />
</div>


<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputPassword4">Código</label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.cd_paciente)" readonly>

        </div>
        <div class="form-group col-md-6">
            <label>Data de Nascimento</label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.data_nascimento)" readonly>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Nome</label>
            <input type="email" class="form-control" value="@Html.DisplayFor(model => model.nome)" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Nome da Mãe</label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.nome_mae)" readonly>
        </div>
    </div>
    <div class="form-row">
